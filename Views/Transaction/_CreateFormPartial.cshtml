@model MyHomeBudget.Models.Transaction

<form id="ajaxCreateForm">
    <div class="mb-3">
        <label asp-for="Date" class="form-label"></label>
        <input asp-for="Date" type="date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="IsIncome" class="form-label"></label>
        <select asp-for="IsIncome" class="form-control">
            <option value="true">Доход</option>
            <option value="false">Расход</option>
        </select>
        <span asp-validation-for="IsIncome" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Category" class="form-label"></label>
        <select asp-for="Category" class="form-control"
                asp-items="Html.GetEnumSelectList<MyHomeBudget.Models.CategoryType>()">
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Amount" class="form-label"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Comment" class="form-label"></label>
        <textarea asp-for="Comment" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <div class="text-end">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>
